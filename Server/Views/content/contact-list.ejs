<div class="container mt-5 p-4 align-items-center rounded-4 border shadow-lg">
    <h1><strong>Contact List</strong> <small class="fs-3 text-muted">list is sorted by <span class="colored">First Name</span></small></h1>
    <div class="row">
        <div class="col">

            <a href="/add" id="addButton" class="btn btn-primary mb-1"><i class="fa-solid fa-circle-plus"></i> Add Contact</a>
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contacts[count].First_name %></td>
                            <td><%= contacts[count].Last_name %></td>
                            <td><%= contacts[count].Contact_number %></td>
                            <td><%= contacts[count].Email_address %></td>
                            <td class="text-center"><a href="/edit/<%= contacts[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= contacts[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>